{
  "name": "@stargazer/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Command-line tool for Stargazer - local code review",
  "bin": {
    "stargazer": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.tsx --format esm --dts",
    "dev": "tsup src/index.tsx --format esm --watch",
    "stargazer": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "cli",
    "code-review",
    "ai",
    "stargazer"
  ],
  "license": "MIT",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@stargazer/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "date-fns": "^4.1.0",
    "ink": "^6.6.0",
    "ora": "^9.0.0",
    "react": "^19.2.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "tsup": "^8.0.0",
    "vitest": "^3.0.5"
  }
}
