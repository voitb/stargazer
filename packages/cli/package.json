{
  "name": "@stargazer/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Command-line tool for Stargazer - local code review",
  "bin": {
    "stargazer": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --watch",
    "stargazer": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": ["cli", "code-review", "ai", "stargazer"],
  "license": "MIT",
  "dependencies": {
    "@stargazer/core": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "vitest": "^3.0.5"
  }
}
